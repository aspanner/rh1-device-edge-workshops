---

- name: compose an image via Image Builder
  hosts:
    - all
  tasks:
    - name: Download manifest
      shell: |
        curl -k -o app.yaml -H "Authorization: Basic $(echo -n 'student{{ student_number }}:{{ admin_password }}' | base64)" {% raw %}{{ manifest | default("{% endraw %}https://gitea.{{ ec2_name_prefix }}.{{ workshop_dns_zone }}/student{{ student_number }}/device-edge-configs/raw/branch/main/APPs/app_motioneye-microshift.yaml" {% raw %}) }} {% endraw %}     
        
    - name: Deploy YAML files
      become: true
      shell: |
        oc --kubeconfig /var/lib/microshift/resources/kubeadmin/kubeconfig create -f app.yaml

    - name: remove app manifest
      ansible.builtin.file:
        path: "app.yaml"
        state: absent